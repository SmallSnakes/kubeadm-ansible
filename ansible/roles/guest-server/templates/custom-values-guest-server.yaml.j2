image: {{ kube_image_repository }}/guest-service:{{ kube_image_tag }}
pullPolicy: "IfNotPresent"
pullSecrets: {{ docker_register_secrets_name }}

emqx_svc_name: emqx
emqx_port: {{ emqx_mqtt_port }}
pushgateway_svc_name: http://pushgateway:{{ prometheus_pushgateway_port }}/metrics/job/pushgateway/instance/

serviceAccountName: guest-service
priorityClassName: {{ kube_priority_name }}

nodeSelector:
  {{ compute_node_role_name }}: {{ node_role_value }}

resources: {}
tolerationSeconds: {{ kube_toleration_seconds }}