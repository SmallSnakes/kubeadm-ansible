libvirt:
  repository: {{ kube_image_repository }}/ubuntu-source-nova-libvirt
  tag: yoga
  pullPolicy: IfNotPresent

libvirt_tls: false
nova_libvirt_port: 16509
# The number of max files qemu can open
qemu_max_files: 32768
# The number of max processes qemu can open
qemu_max_processes: 131072
secret:
  rbd_secret_uuid: "{{ ceph.rbd_secret_uuid }}"
  secret_user: "{{ ceph.rbd_ceph_user }}"
  ceph_admin_keyring: "{{ ceph_admin_keyring }}"
serviceAccountName: libvirt
nodeSelector: {}
